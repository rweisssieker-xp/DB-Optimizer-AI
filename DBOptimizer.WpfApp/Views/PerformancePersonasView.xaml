<UserControl x:Class="DBOptimizer.WpfApp.Views.PerformancePersonasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Background="#F5F5F5">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <TextBlock Text="🎭 Performance Personas - Expert AI Models"
                          FontSize="28" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20"/>

                <TextBlock Text="World-class experts in your app - AI trained by top AX consultants"
                          FontSize="14" Foreground="#7F8C8D" Margin="0,0,0,30"/>

                <!-- Personas Grid -->
                <TextBlock Text="Available Expert Personas" FontSize="18" FontWeight="SemiBold"
                          Foreground="#34495E" Margin="0,0,0,15"/>
                
                <ItemsControl ItemsSource="{Binding AvailablePersonas}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,10,10"
                                   BorderBrush="#E0E0E0" BorderThickness="1" Cursor="Hand">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick"
                                                Command="{Binding DataContext.GetExpertAdviceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="{Binding Avatar}" FontSize="32" Margin="0,0,10,0"/>
                                        <StackPanel>
                                            <TextBlock Text="{Binding ExpertName}" FontWeight="SemiBold" FontSize="16"/>
                                            <TextBlock Text="{Binding Specialty}" Foreground="#7F8C8D" FontSize="12"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" 
                                              Foreground="#7F8C8D" FontSize="12" Margin="0,0,0,10"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Success Rate: " FontSize="11"/>
                                        <TextBlock Text="{Binding SuccessRate, StringFormat='{}{0:P0}'}" 
                                                  FontWeight="Bold" Foreground="#27AE60" FontSize="11"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Action Buttons -->
                <UniformGrid Columns="2" Margin="0,20,0,20">
                    <Button Content="🎭 Get Consensus from All Experts"
                           Command="{Binding GetConsensusAdviceCommand}"
                           IsEnabled="{Binding IsAnalyzing, Converter={StaticResource InverseBoolConverter}}"
                           Background="#E67E22" Foreground="White"
                           FontSize="14" FontWeight="Bold" Padding="15"
                           BorderThickness="0" Cursor="Hand" Height="50" Margin="0,0,5,0"/>
                    
                    <Button Content="⚡ Get Individual Expert Advice"
                           Command="{Binding GetExpertAdviceCommand}"
                           IsEnabled="{Binding IsAnalyzing, Converter={StaticResource InverseBoolConverter}}"
                           Background="#3498DB" Foreground="White"
                           FontSize="14" FontWeight="Bold" Padding="15"
                           BorderThickness="0" Cursor="Hand" Height="50" Margin="5,0,0,0"/>
                </UniformGrid>

                <!-- Status -->
                <Border Background="#3498DB" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                    <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontSize="14" TextWrapping="Wrap"/>
                </Border>

                <!-- Current Advice -->
                <Border Background="White" CornerRadius="8" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1"
                       Visibility="{Binding CurrentAdvice, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="💡 Advice from " FontSize="18" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding CurrentAdvice.ExpertName}" FontSize="18" FontWeight="Bold" Foreground="#E67E22"/>
                        </StackPanel>

                        <TextBlock Text="{Binding CurrentAdvice.Advice}" TextWrapping="Wrap" 
                                  FontSize="14" Margin="0,0,0,15"/>

                        <TextBlock Text="Reasoning:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding CurrentAdvice.Reasoning}" TextWrapping="Wrap" 
                                  Foreground="#7F8C8D" Margin="0,0,0,15"/>

                        <TextBlock Text="Recommended Steps:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ItemsControl ItemsSource="{Binding CurrentAdvice.Steps}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Margin="0,0,0,5" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Border Background="#FFF3CD" CornerRadius="5" Padding="10" Margin="0,15,0,0">
                            <TextBlock Text="{Binding CurrentAdvice.Caution}" TextWrapping="Wrap" 
                                      Foreground="#856404"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Consensus -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,20,0,0" 
                       BorderBrush="#E0E0E0" BorderThickness="1"
                       Visibility="{Binding Consensus, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="🏛️ Expert Consensus" FontSize="20" FontWeight="SemiBold"
                                  Foreground="#E67E22" Margin="0,0,0,15"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Agreement Score: " FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Consensus.AgreementScore, StringFormat='{}{0:P0}'}" 
                                      FontWeight="Bold" Foreground="#27AE60" FontSize="16"/>
                        </StackPanel>

                        <TextBlock Text="Consensus Recommendation:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                        <TextBlock Text="{Binding Consensus.ConsensusAdvice}" TextWrapping="Wrap" Margin="0,0,0,15"/>

                        <TextBlock Text="📊 All Expert Opinions:" FontWeight="SemiBold" Margin="0,10,0,10"/>
                        <ItemsControl ItemsSource="{Binding Consensus.ExpertOpinions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#ECF0F1" Margin="0,0,0,10" Padding="10" CornerRadius="5">
                                        <StackPanel>
                                            <TextBlock Text="{Binding ExpertName}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Advice}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

