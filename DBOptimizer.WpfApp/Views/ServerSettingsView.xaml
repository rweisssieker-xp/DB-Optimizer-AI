<UserControl x:Class="DBOptimizer.WpfApp.Views.ServerSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1200">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="SQL Server Settings Analyzer" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding StatusMessage}" FontSize="14" Foreground="#666" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Button Content="🔄 Refresh" Command="{Binding RefreshCommand}"
                       Background="#2196F3" Foreground="White" FontWeight="Bold"
                       Width="120" Height="35" BorderThickness="0" Cursor="Hand"/>
            </StackPanel>

            <!-- Memory Info -->
            <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="2"
                   CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Total Memory" FontSize="12" Foreground="#1976D2"/>
                        <TextBlock Text="{Binding TotalMemoryDisplay}" FontSize="20" FontWeight="Bold" Foreground="#0D47A1" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="SQL Memory Used" FontSize="12" Foreground="#1976D2"/>
                        <TextBlock Text="{Binding SqlMemoryDisplay}" FontSize="20" FontWeight="Bold" Foreground="#0D47A1" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Max Configured" FontSize="12" Foreground="#1976D2"/>
                        <TextBlock Text="{Binding MaxMemoryDisplay}" FontSize="20" FontWeight="Bold" Foreground="#0D47A1" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3">
                        <TextBlock Text="Recommended Max" FontSize="12" Foreground="#388E3C"/>
                        <TextBlock Text="{Binding RecommendedMemoryDisplay}" FontSize="20" FontWeight="Bold" Foreground="#1B5E20" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Tabs -->
            <TabControl>
                <!-- Recommendations Tab -->
                <TabItem Header="💡 Recommendations">
                    <ListBox ItemsSource="{Binding Recommendations}" Margin="10" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FFF3E0" Padding="15" Margin="0,5" CornerRadius="5" BorderThickness="2" BorderBrush="#FF9800">

                                    <StackPanel>
                                        <!-- Header -->
                                        <Grid Margin="0,0,0,10">
                                            <TextBlock FontWeight="Bold" FontSize="16" VerticalAlignment="Center">
                                                <Run Text="{Binding SettingName}"/>
                                            </TextBlock>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center">
                                                    <Run Text="{Binding Priority}"/>
                                                </TextBlock>
                                                <TextBlock FontWeight="Bold" VerticalAlignment="Center">
                                                    <Run Text="Impact: "/>
                                                    <Run Text="{Binding ImpactScore}"/>
                                                    <Run Text="/100"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Values -->
                                        <Grid Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Current: " FontWeight="SemiBold" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentValue}" Foreground="#D32F2F"/>

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Recommended: " FontWeight="SemiBold" Margin="0,5,10,0"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding RecommendedValue}" Foreground="#388E3C" Margin="0,5,0,0"/>
                                        </Grid>

                                        <!-- Reason -->
                                        <TextBlock Text="{Binding Reason}" TextWrapping="Wrap" Margin="0,0,0,10"/>

                                        <!-- Expected Impact -->
                                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                            <Run Text="💡 " FontWeight="Bold"/>
                                            <Run Text="{Binding ExpectedImpact}" FontStyle="Italic"/>
                                        </TextBlock>

                                        <!-- Action Buttons -->
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="✅ Apply"
                                                   Command="{Binding DataContext.ApplyRecommendationCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding}"
                                                   Background="#4CAF50" Foreground="White" FontWeight="Bold"
                                                   Height="30" Padding="20,0" BorderThickness="0" Cursor="Hand"
                                                   ToolTip="Apply this recommendation directly"/>

                                            <Button Content="📋 Copy Script"
                                                   Command="{Binding DataContext.CopyRecommendationScriptCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding}"
                                                   Background="#2196F3" Foreground="White" FontWeight="Bold"
                                                   Height="30" Padding="20,0" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"
                                                   ToolTip="Copy T-SQL script to clipboard"/>

                                            <Button Content="ℹ️ Details"
                                                   Command="{Binding DataContext.ViewRecommendationDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding}"
                                                   Background="#757575" Foreground="White" FontWeight="Bold"
                                                   Height="30" Padding="20,0" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"
                                                   ToolTip="View detailed information"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>

                <!-- All Configurations Tab -->
                <TabItem Header="⚙️ All Settings">
                    <DataGrid ItemsSource="{Binding Configurations}"
                             AutoGenerateColumns="False"
                             IsReadOnly="True"
                             Margin="10"
                             CanUserAddRows="False"
                             AlternationCount="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Setting Name" Binding="{Binding Name}" Width="250"/>
                            <DataGridTextColumn Header="Configured" Binding="{Binding ConfiguredValue}" Width="100"/>
                            <DataGridTextColumn Header="Running" Binding="{Binding RunningValue}" Width="100"/>
                            <DataGridTextColumn Header="Min" Binding="{Binding MinValue}" Width="100"/>
                            <DataGridTextColumn Header="Max" Binding="{Binding MaxValue}" Width="100"/>
                            <DataGridCheckBoxColumn Header="Advanced" Binding="{Binding IsAdvanced}" Width="80"/>
                            <DataGridCheckBoxColumn Header="Dynamic" Binding="{Binding IsDynamic}" Width="80"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
            </TabControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>

