<UserControl x:Class="DBOptimizer.WpfApp.Views.PerformanceDnaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Background="#F5F5F5">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <!-- Header -->
                <TextBlock Text="🧬 Performance DNA - Genetic Algorithm Optimization"
                          FontSize="28" FontWeight="Bold"
                          Foreground="#2C3E50" Margin="0,0,0,20"/>

                <TextBlock Text="Evolution-based optimization - Your system learns like biological evolution"
                          FontSize="14" Foreground="#7F8C8D"
                          Margin="0,0,0,30"/>

                <!-- Configuration Panel -->
                <Border Background="White" CornerRadius="8"
                       Padding="20" Margin="0,0,0,20"
                       BorderBrush="#E0E0E0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Optimization Configuration" FontSize="18" FontWeight="SemiBold"
                                  Foreground="#34495E" Margin="0,0,0,15"/>

                        <TextBlock Text="Problem Description:" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding ProblemDescription, UpdateSourceTrigger=PropertyChanged}"
                                Padding="8" FontSize="14" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Generations:" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding Generations, UpdateSourceTrigger=PropertyChanged}"
                                        Padding="8" FontSize="14"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Population Size:" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding PopulationSize, UpdateSourceTrigger=PropertyChanged}"
                                        Padding="8" FontSize="14"/>
                            </StackPanel>
                        </Grid>

                        <Button Content="🚀 Evolve Optimal Solution"
                               Command="{Binding EvolveOptimalSolutionCommand}"
                               IsEnabled="{Binding IsEvolving, Converter={StaticResource InverseBoolConverter}}"
                               Background="#27AE60" Foreground="White"
                               FontSize="16" FontWeight="Bold"
                               Padding="15" Margin="0,20,0,0"
                               BorderThickness="0" Cursor="Hand"
                               Height="50"/>
                    </StackPanel>
                </Border>

                <!-- Status -->
                <Border Background="#3498DB" CornerRadius="8"
                       Padding="15" Margin="0,0,0,20">
                    <TextBlock Text="{Binding StatusMessage}"
                              Foreground="White" FontSize="14"
                              TextWrapping="Wrap"/>
                </Border>

                <!-- Results -->
                <Border Background="White" CornerRadius="8"
                       Padding="20" BorderBrush="#E0E0E0" BorderThickness="1"
                       Visibility="{Binding BestSolution, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="🏆 Best Solution Found" FontSize="20" FontWeight="SemiBold"
                                  Foreground="#27AE60" Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Fitness Score: " FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding BestFitness, StringFormat='{}{0:F2}'}"
                                      Foreground="#E74C3C" FontWeight="Bold" FontSize="16"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Generation: " FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding BestSolution.Generation}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Optimization Genes: " FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding BestSolution.Genes.Count}"/>
                        </StackPanel>

                        <TextBlock Text="Evolution Summary:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding EvolutionSummary}"
                                  TextWrapping="Wrap" Foreground="#7F8C8D"/>

                        <!-- Evolution History Chart -->
                        <TextBlock Text="Evolution Progress:" FontSize="16" FontWeight="SemiBold"
                                  Margin="0,20,0,10"/>
                        <DataGrid ItemsSource="{Binding EvolutionHistory}"
                                 AutoGenerateColumns="False"
                                 IsReadOnly="True"
                                 HeadersVisibility="Column"
                                 GridLinesVisibility="Horizontal"
                                 MaxHeight="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Generation" Binding="{Binding Generation}" Width="*"/>
                                <DataGridTextColumn Header="Best Fitness" Binding="{Binding BestFitness, StringFormat='{}{0:F2}'}" Width="*"/>
                                <DataGridTextColumn Header="Genes" Binding="{Binding GeneCount}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

