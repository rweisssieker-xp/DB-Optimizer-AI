<UserControl x:Class="DBOptimizer.WpfApp.Views.PerformanceCommunityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Background="#F5F5F5">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <TextBlock Text="ðŸŒ Performance Community - Global Benchmarking"
                          FontSize="28" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20"/>

                <TextBlock Text="Learn from thousands - Anonymous benchmarking against global AX community"
                          FontSize="14" Foreground="#7F8C8D" Margin="0,0,0,30"/>

                <!-- Configuration -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20"
                       BorderBrush="#E0E0E0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Your Profile" FontSize="18" FontWeight="SemiBold"
                                  Foreground="#34495E" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Industry:" Margin="0,0,0,5"/>
                                <ComboBox SelectedValue="{Binding IndustryType}" Padding="8" FontSize="14">
                                    <ComboBoxItem Content="Manufacturing"/>
                                    <ComboBoxItem Content="Retail"/>
                                    <ComboBoxItem Content="Finance"/>
                                    <ComboBoxItem Content="Healthcare"/>
                                    <ComboBoxItem Content="Other"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="User Count:" Margin="0,0,0,5"/>
                                <ComboBox SelectedValue="{Binding UserCountRange}" Padding="8" FontSize="14">
                                    <ComboBoxItem Content="1-100"/>
                                    <ComboBoxItem Content="100-500"/>
                                    <ComboBoxItem Content="500-1000"/>
                                    <ComboBoxItem Content="1000+"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Region:" Margin="0,0,0,5"/>
                                <ComboBox SelectedValue="{Binding Region}" Padding="8" FontSize="14">
                                    <ComboBoxItem Content="EMEA"/>
                                    <ComboBoxItem Content="Americas"/>
                                    <ComboBoxItem Content="APAC"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <Button Content="ðŸŒ Get Industry Benchmark"
                               Command="{Binding GetBenchmarkCommand}"
                               IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                               Background="#1ABC9C" Foreground="White"
                               FontSize="16" FontWeight="Bold" Padding="15" Margin="0,20,0,0"
                               BorderThickness="0" Cursor="Hand" Height="50"/>
                    </StackPanel>
                </Border>

                <!-- Status -->
                <Border Background="#3498DB" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                    <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontSize="14" TextWrapping="Wrap"/>
                </Border>

                <!-- Benchmark Report -->
                <Border Background="White" CornerRadius="8" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1"
                       Visibility="{Binding CurrentReport, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="ðŸ“Š Your Performance Ranking" FontSize="20" FontWeight="SemiBold"
                                      Foreground="#1ABC9C" Grid.Column="0"/>
                            
                            <Border Background="#27AE60" CornerRadius="20" Padding="15,8" Grid.Column="1">
                                <TextBlock Text="{Binding CurrentReport.YourRanking}" 
                                          Foreground="White" FontWeight="Bold" FontSize="16"/>
                            </Border>
                        </Grid>

                        <TextBlock Text="{Binding CurrentReport.PeerCount, StringFormat='Compared with {0} peers'}"
                                  Foreground="#7F8C8D" Margin="0,0,0,20"/>

                        <!-- Metrics Comparison -->
                        <TextBlock Text="ðŸ“ˆ Metrics Comparison" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding CurrentReport.Metrics}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#ECF0F1" Margin="0,0,0,10" Padding="15" CornerRadius="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Value.Name}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Value.Status}" Foreground="#27AE60" FontSize="11"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="Your Value" FontSize="10" Foreground="#7F8C8D"/>
                                                <TextBlock FontWeight="Bold">
                                                    <Run Text="{Binding Value.YourValue, StringFormat='{}{0:F1}'}"/>
                                                    <Run Text="{Binding Value.Unit}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2">
                                                <TextBlock Text="Median" FontSize="10" Foreground="#7F8C8D"/>
                                                <TextBlock>
                                                    <Run Text="{Binding Value.MedianValue, StringFormat='{}{0:F1}'}"/>
                                                    <Run Text="{Binding Value.Unit}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <StackPanel Grid.Column="3">
                                                <TextBlock Text="Top 10%" FontSize="10" Foreground="#7F8C8D"/>
                                                <TextBlock Foreground="#27AE60">
                                                    <Run Text="{Binding Value.Top10PercentValue, StringFormat='{}{0:F1}'}"/>
                                                    <Run Text="{Binding Value.Unit}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Best Practices -->
                        <TextBlock Text="ðŸ’¡ Top-Rated Best Practices" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,10"/>
                        <ItemsControl ItemsSource="{Binding BestPractices}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                                           Margin="0,0,0,10" Padding="15" CornerRadius="5">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14" Grid.Column="0"/>
                                                
                                                <StackPanel Orientation="Horizontal" Grid.Column="1">
                                                    <Border Background="#3498DB" CornerRadius="10" Padding="8,4" Margin="0,0,5,0">
                                                        <TextBlock Foreground="White" FontSize="11">
                                                            <Run Text="{Binding AdoptionRate}"/>
                                                            <Run Text="% adoption"/>
                                                        </TextBlock>
                                                    </Border>
                                                    <Border Background="#27AE60" CornerRadius="10" Padding="8,4">
                                                        <TextBlock Foreground="White" FontSize="11">
                                                            <Run Text="+"/>
                                                            <Run Text="{Binding AverageImprovement, StringFormat='{}{0:F1}'}"/>
                                                            <Run Text="% improvement"/>
                                                        </TextBlock>
                                                    </Border>
                                                </StackPanel>
                                            </Grid>

                                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" 
                                                      Foreground="#7F8C8D" Margin="0,0,0,10"/>

                                            <Expander Header="Show Implementation Steps" IsExpanded="False">
                                                <ItemsControl ItemsSource="{Binding Steps}" Margin="10,10,0,0">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding}" Margin="0,0,0,5" TextWrapping="Wrap"/>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Expander>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Trending Issues -->
                        <TextBlock Text="ðŸ”¥ Trending Community Alerts" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,10"
                                  Visibility="{Binding CurrentReport.TrendingIssues.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                        <ItemsControl ItemsSource="{Binding CurrentReport.TrendingIssues}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FFF3CD" Margin="0,0,0,5" Padding="10" CornerRadius="5">
                                        <TextBlock Text="{Binding}" TextWrapping="Wrap" Foreground="#856404"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

