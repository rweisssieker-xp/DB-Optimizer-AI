<UserControl x:Class="DBOptimizer.WpfApp.Views.DatabaseHealthView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Database Health Monitor" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Button Content="ðŸ”„ Refresh" Command="{Binding RefreshCommand}" 
                       Background="#2196F3" Foreground="White" FontWeight="Bold" 
                       Width="120" Height="35" BorderThickness="0" Cursor="Hand"/>
            </StackPanel>

            <!-- Database Metrics -->
            <Border Background="#F3E5F5" BorderBrush="#9C27B0" BorderThickness="2" 
                   CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Total Size (MB)" FontSize="14" Foreground="#7B1FA2"/>
                        <TextBlock Text="{Binding CurrentMetrics.TotalSizeMB}" 
                                  FontSize="32" FontWeight="Bold" Foreground="#4A148C" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Data Size (MB)" FontSize="14" Foreground="#7B1FA2"/>
                        <TextBlock Text="{Binding CurrentMetrics.DataSizeMB}" 
                                  FontSize="32" FontWeight="Bold" Foreground="#4A148C" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Log Size (MB)" FontSize="14" Foreground="#7B1FA2"/>
                        <TextBlock Text="{Binding CurrentMetrics.LogSizeMB}" 
                                  FontSize="32" FontWeight="Bold" Foreground="#4A148C" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Tabs for different views -->
            <TabControl>
                <!-- Top Tables -->
                <TabItem Header="ðŸ“Š Top Tables">
                    <ListBox ItemsSource="{Binding TopTables}" Margin="10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="300"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" FontWeight="Bold">
                                        <Run Text="{Binding SchemaName}"/>
                                        <Run Text="."/>
                                        <Run Text="{Binding TableName}"/>
                                    </TextBlock>
                                    <TextBlock Grid.Column="1">
                                        <Run Text="{Binding RowCount}"/>
                                        <Run Text=" rows"/>
                                    </TextBlock>
                                    <TextBlock Grid.Column="2">
                                        <Run Text="{Binding TotalSpaceKB, StringFormat='{}{0:N0} KB'}"/>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>

                <!-- Fragmented Indexes -->
                <TabItem Header="ðŸ”§ Fragmented Indexes">
                    <ListBox ItemsSource="{Binding FragmentedIndexes}" Margin="10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FFF3E0" Padding="15" Margin="0,5" CornerRadius="5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Info Row -->
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="300"/>
                                                <ColumnDefinition Width="200"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" FontWeight="Bold">
                                                <Run Text="{Binding TableName}"/>
                                                <Run Text="."/>
                                                <Run Text="{Binding IndexName}"/>
                                            </TextBlock>
                                            <TextBlock Grid.Column="1" Foreground="#F57C00" FontWeight="Bold">
                                                <Run Text="{Binding FragmentationPercent, StringFormat='{}{0:F2}%'}"/>
                                                <Run Text=" fragmented"/>
                                            </TextBlock>
                                            <TextBlock Grid.Column="2">
                                                <Run Text="{Binding PageCount}"/>
                                                <Run Text=" pages"/>
                                            </TextBlock>
                                        </Grid>

                                        <!-- Action Buttons -->
                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                                            <Button Content="ðŸ”§ Rebuild"
                                                   Command="{Binding DataContext.RebuildIndexCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding}"
                                                   Background="#FF6F00" Foreground="White" FontWeight="Bold"
                                                   Height="30" Padding="15,0" BorderThickness="0" Cursor="Hand"
                                                   ToolTip="Rebuild index (offline, full reorganization)"/>

                                            <Button Content="ðŸ”„ Reorganize"
                                                   Command="{Binding DataContext.ReorganizeIndexCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding}"
                                                   Background="#2196F3" Foreground="White" FontWeight="Bold"
                                                   Height="30" Padding="15,0" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"
                                                   ToolTip="Reorganize index (online, faster, less locking)"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>

                <!-- Missing Indexes -->
                <TabItem Header="âž• Missing Indexes">
                    <ListBox ItemsSource="{Binding MissingIndexes}" Margin="10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#E8F5E9" Padding="15" Margin="0,5" CornerRadius="5">
                                    <StackPanel>
                                        <!-- Header -->
                                        <Grid>
                                            <TextBlock Text="{Binding TableName}" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                                            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">
                                                <Run Text="ðŸ’¥ Impact: "/>
                                                <Run Text="{Binding ImpactScore, StringFormat='{}{0:N0}'}" FontWeight="Bold" Foreground="#2E7D32"/>
                                            </TextBlock>
                                        </Grid>

                                        <!-- Columns Info -->
                                        <TextBlock Margin="0,5,0,0" TextWrapping="Wrap">
                                            <Run Text="Equality: " FontWeight="SemiBold"/>
                                            <Run Text="{Binding EqualityColumns}" Foreground="#2E7D32"/>
                                        </TextBlock>

                                        <TextBlock Margin="0,2,0,0" TextWrapping="Wrap" Visibility="{Binding InequalityColumns, Converter={StaticResource NullToVisibilityConverter}}">
                                            <Run Text="Inequality: " FontWeight="SemiBold"/>
                                            <Run Text="{Binding InequalityColumns}" Foreground="#2E7D32"/>
                                        </TextBlock>

                                        <TextBlock Margin="0,2,0,0" TextWrapping="Wrap" Visibility="{Binding IncludedColumns, Converter={StaticResource NullToVisibilityConverter}}">
                                            <Run Text="Include: " FontWeight="SemiBold"/>
                                            <Run Text="{Binding IncludedColumns}" Foreground="#757575"/>
                                        </TextBlock>

                                        <!-- Stats -->
                                        <TextBlock Margin="0,5,0,0">
                                            <Run Text="Seeks: "/>
                                            <Run Text="{Binding UserSeeks, StringFormat='{}{0:N0}'}" FontWeight="Bold"/>
                                            <Run Text="  |  Scans: "/>
                                            <Run Text="{Binding UserScans, StringFormat='{}{0:N0}'}" FontWeight="Bold"/>
                                        </TextBlock>

                                        <!-- Action Buttons -->
                                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                            <Button Content="ðŸ“‹ Copy Script"
                                                   Command="{Binding DataContext.CopyIndexScriptCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding}"
                                                   Background="#2196F3" Foreground="White" FontWeight="Bold"
                                                   Height="30" Padding="15,0" BorderThickness="0" Cursor="Hand"
                                                   ToolTip="Copy CREATE INDEX script to clipboard"/>

                                            <Button Content="âœ… Create Index"
                                                   Command="{Binding DataContext.CreateIndexCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding}"
                                                   Background="#4CAF50" Foreground="White" FontWeight="Bold"
                                                   Height="30" Padding="15,0" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"
                                                   ToolTip="Create index directly in database"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>
            </TabControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>



