<UserControl x:Class="DBOptimizer.WpfApp.Views.BatchJobsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Batch Jobs Monitor" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Button Content="🔄 Refresh" Command="{Binding RefreshCommand}"
                       Background="#2196F3" Foreground="White" FontWeight="Bold"
                       Width="120" Height="35" BorderThickness="0" Cursor="Hand"/>
            </StackPanel>

            <!-- Smart Batching Advisor Tools -->
            <Border Background="#E8F5E9" BorderBrush="#4CAF50" BorderThickness="2"
                   CornerRadius="10" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="⚡ Smart Batching Advisor" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- Row 1: Analysis Tools -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="📊 Analyze Batch Sizing"
                               Command="{Binding AnalyzeBatchSizingCommand}"
                               Background="#4CAF50" Foreground="White" FontWeight="Bold"
                               Height="35" Padding="15,0" BorderThickness="0" Cursor="Hand"
                               ToolTip="Analyze optimal batch size for maximum performance"/>

                        <Button Content="📅 Optimize Scheduling"
                               Command="{Binding OptimizeSchedulingCommand}"
                               Background="#2196F3" Foreground="White" FontWeight="Bold"
                               Height="35" Padding="15,0" BorderThickness="0"
                               Cursor="Hand" Margin="10,0,0,0"
                               ToolTip="Find optimal execution time to minimize system load"/>
                    </StackPanel>

                    <!-- Row 2: Detection & Optimization -->
                    <StackPanel Orientation="Horizontal">
                        <Button Content="⚠️ Detect Anti-Patterns"
                               Command="{Binding DetectAntiPatternsCommand}"
                               Background="#FF9800" Foreground="White" FontWeight="Bold"
                               Height="35" Padding="15,0" BorderThickness="0" Cursor="Hand"
                               ToolTip="Identify batch job anti-patterns (Row-by-Row, Peak Hour, etc.)"/>

                        <Button Content="🚀 Optimize Parallelization"
                               Command="{Binding OptimizeParallelizationCommand}"
                               Background="#9C27B0" Foreground="White" FontWeight="Bold"
                               Height="35" Padding="15,0" BorderThickness="0"
                               Cursor="Hand" Margin="10,0,0,0"
                               ToolTip="Recommend optimal parallel processing configuration"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Running Jobs -->
            <Border Background="#FFF3E0" BorderBrush="#FF9800" BorderThickness="2" 
                   CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="⏱️ Running Batch Jobs" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ListBox ItemsSource="{Binding RunningJobs}" MaxHeight="250">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="300"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="{Binding JobDescription}" FontWeight="Bold"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Status}"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Company}"/>
                                    <TextBlock Grid.Column="3" Text="{Binding StartDateTime, StringFormat='HH:mm:ss'}"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Failed Jobs -->
            <Border Background="#FFEBEE" BorderBrush="#F44336" BorderThickness="2" 
                   CornerRadius="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="❌ Failed Batch Jobs" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ListBox ItemsSource="{Binding FailedJobs}" MaxHeight="250">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="300"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="{Binding JobDescription}" 
                                              FontWeight="Bold" Foreground="#D32F2F"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Status}" Foreground="#D32F2F"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Company}"/>
                                    <TextBlock Grid.Column="3" Text="{Binding StartDateTime, StringFormat='yyyy-MM-dd HH:mm'}"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>



