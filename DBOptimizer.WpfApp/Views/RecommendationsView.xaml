<UserControl x:Class="DBOptimizer.WpfApp.Views.RecommendationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ’¡ Optimization Recommendations" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="AI-generated optimization suggestions based on performance data" 
                      Foreground="#757575" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Toolbar -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="ðŸ”„ Refresh" Command="{Binding RefreshCommand}" 
                       Background="#2196F3" Foreground="White" FontWeight="Bold" 
                       Width="120" Height="35" BorderThickness="0" Cursor="Hand"/>
                <Button Content="ðŸ“‹ Copy Script" Command="{Binding CopyScriptCommand}" 
                       Background="#4CAF50" Foreground="White" FontWeight="Bold" 
                       Width="140" Height="35" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"/>
                <Button Content="âœ… Mark Implemented" Command="{Binding MarkAsImplementedCommand}" 
                       Background="#FF9800" Foreground="White" FontWeight="Bold" 
                       Width="180" Height="35" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Recommendations List -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- List -->
                <ListBox Grid.Column="0" ItemsSource="{Binding Recommendations}" 
                        SelectedItem="{Binding SelectedRecommendation}" Margin="0,0,10,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="12" Margin="0,5">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="#F44336" Padding="5,2" CornerRadius="3" Margin="0,0,5,0">
                                            <TextBlock Text="{Binding Priority}" FontSize="11" Foreground="White" FontWeight="Bold"/>
                                        </Border>
                                        <Border Background="#E0E0E0" Padding="5,2" CornerRadius="3">
                                            <TextBlock Text="{Binding Category}" FontSize="11"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" Margin="0,8,0,0"/>
                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" 
                                              Foreground="#757575" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Details -->
                <Border Grid.Column="1" Background="#F5F5F5" BorderBrush="#E0E0E0" 
                       BorderThickness="1" CornerRadius="10" Padding="20">
                    <ScrollViewer>
                        <StackPanel>
                            <TextBlock Text="{Binding SelectedRecommendation.Title}" 
                                      FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="Priority:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedRecommendation.Priority}" FontSize="16"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="Category:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedRecommendation.Category}" FontSize="16"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="Description:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedRecommendation.Description}" 
                                          TextWrapping="Wrap" FontSize="14"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="Impact Analysis:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedRecommendation.ImpactAnalysis}" 
                                          TextWrapping="Wrap" FontSize="14"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="Action Script:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding SelectedRecommendation.ActionScript}" 
                                        IsReadOnly="True" TextWrapping="Wrap" 
                                        FontFamily="Consolas" Height="200" 
                                        VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <Button Content="ðŸ“‹ Copy Script" Command="{Binding CopyScriptCommand}" 
                                       Background="#4CAF50" Foreground="White" FontWeight="Bold" 
                                       Width="140" Height="35" BorderThickness="0" Cursor="Hand"/>
                                <Button Content="âœ… Mark Implemented" Command="{Binding MarkAsImplementedCommand}" 
                                       Background="#FF9800" Foreground="White" FontWeight="Bold" 
                                       Width="180" Height="35" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>


