<UserControl x:Class="DBOptimizer.WpfApp.Views.SqlPerformanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1400">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="🔍 SQL Performance Monitor" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Analyze expensive SQL queries and execution statistics"
                      Foreground="#757575" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Statistics Dashboard -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total CPU Time Card -->
            <Border Grid.Column="0" Background="#FFEBEE" BorderBrush="#F44336" BorderThickness="2"
                   CornerRadius="10" Padding="15" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="⏱️ Total CPU Time" FontSize="12" Foreground="#757575" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding TotalCpuTimeMs, StringFormat='{}{0:N2} ms'}"
                              FontSize="24" FontWeight="Bold" Foreground="#C62828"/>
                    <TextBlock Text="Cumulative CPU usage" FontSize="10" Foreground="#757575" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Problematic Queries Card -->
            <Border Grid.Column="1" Background="#FFF3E0" BorderBrush="#FF9800" BorderThickness="2"
                   CornerRadius="10" Padding="15" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="⚠️ Problematic Queries" FontSize="12" Foreground="#757575" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding ProblematicQueriesCount}"
                              FontSize="24" FontWeight="Bold" Foreground="#E65100"/>
                    <TextBlock Text="High CPU or reads" FontSize="10" Foreground="#757575" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Avg Execution Time Card -->
            <Border Grid.Column="2" Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="2"
                   CornerRadius="10" Padding="15" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="📊 Avg Execution Time" FontSize="12" Foreground="#757575" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding AvgExecutionTimeMs, StringFormat='{}{0:F2} ms'}"
                              FontSize="24" FontWeight="Bold" Foreground="#1565C0"/>
                    <TextBlock Text="Average across all queries" FontSize="10" Foreground="#757575" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Top Bottleneck Card -->
            <Border Grid.Column="3" Background="#F3E5F5" BorderBrush="#9C27B0" BorderThickness="2"
                   CornerRadius="10" Padding="15">
                <StackPanel>
                    <TextBlock Text="🎯 Top Bottleneck" FontSize="12" Foreground="#757575" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding TopBottleneck}" TextTrimming="CharacterEllipsis"
                              FontSize="11" FontWeight="Bold" Foreground="#6A1B9A" Height="40" TextWrapping="Wrap"/>
                    <TextBlock Text="Highest CPU consumer" FontSize="10" Foreground="#757575" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Filters and Toolbar -->
        <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="1"
               CornerRadius="10" Padding="15" Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Filter Controls -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Sort by:" VerticalAlignment="Center"
                              FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <ComboBox Grid.Column="1" ItemsSource="{Binding SortOptions}"
                             SelectedItem="{Binding SelectedSortBy}"
                             SelectionChanged="OnFilterChanged"/>

                    <TextBlock Grid.Column="2" Text="Time Range:" VerticalAlignment="Center"
                              FontWeight="SemiBold" Margin="20,0,10,0"/>
                    <ComboBox Grid.Column="3" ItemsSource="{Binding TimeRangeOptions}"
                             SelectedItem="{Binding SelectedTimeRange}"
                             SelectionChanged="OnFilterChanged"/>

                    <TextBlock Grid.Column="4" Text="Min CPU (ms):" VerticalAlignment="Center"
                              FontWeight="SemiBold" Margin="20,0,10,0"/>
                    <TextBox Grid.Column="5" Text="{Binding MinCpuTimeMs, UpdateSourceTrigger=PropertyChanged}"
                            VerticalAlignment="Center" Padding="5"/>
                </Grid>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,15,0,0">
                    <Button Content="🔄 Refresh" Command="{Binding RefreshCommand}"
                           Background="#2196F3" Foreground="White" FontWeight="Bold"
                           Width="120" Height="35" BorderThickness="0" Cursor="Hand"/>
                    <Button Content="🔍 Apply Filters" Command="{Binding ApplyFiltersCommand}"
                           Background="#4CAF50" Foreground="White" FontWeight="Bold"
                           Width="140" Height="35" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"/>
                    <Button Content="📥 Export CSV" Command="{Binding ExportToCsvCommand}"
                           Background="#FF9800" Foreground="White" FontWeight="Bold"
                           Width="140" Height="35" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"/>
                    <Button Content="🤖 AI Analysis" Command="{Binding AnalyzeWithAiCommand}"
                           Background="#9C27B0" Foreground="White" FontWeight="Bold"
                           Width="140" Height="35" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"
                           ToolTip="Analyze selected query with AI (OpenAI/Azure OpenAI)"
                           IsEnabled="{Binding IsAiEnabled}"/>
                    <Button Content="🎯 Batch Analyze Top 10" Command="{Binding BatchAnalyzeCommand}"
                           Background="#7B1FA2" Foreground="White" FontWeight="Bold"
                           Width="180" Height="35" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"
                           ToolTip="Analyze top 10 expensive queries in batch"
                           IsEnabled="{Binding IsAiEnabled}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Queries List -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="📋 Top Expensive Queries" FontSize="16"
                          FontWeight="Bold" Margin="0,0,0,10"/>

                <ListBox Grid.Row="1" ItemsSource="{Binding ExpensiveQueries}"
                        SelectedItem="{Binding SelectedQuery}"
                        SelectionChanged="OnQuerySelected">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#F5F5F5" BorderBrush="#E0E0E0"
                                   BorderThickness="1" CornerRadius="5"
                                   Padding="15" Margin="0,5" Cursor="Hand">
                                <StackPanel>
                                    <TextBlock Text="{Binding QueryText}" TextWrapping="Wrap"
                                              FontFamily="Consolas" FontSize="11" MaxHeight="60" TextTrimming="CharacterEllipsis"/>

                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Background="#FFCDD2" Padding="6,3" CornerRadius="3" Margin="0,0,5,0">
                                            <TextBlock FontSize="10">
                                                <Run Text="⏱️ CPU: "/>
                                                <Run Text="{Binding AvgCpuTimeMs, StringFormat='{}{0:F2} ms'}" FontWeight="Bold"/>
                                            </TextBlock>
                                        </Border>
                                        <Border Grid.Column="1" Background="#C8E6C9" Padding="6,3" CornerRadius="3" Margin="0,0,5,0">
                                            <TextBlock FontSize="10">
                                                <Run Text="🔄 Exec: "/>
                                                <Run Text="{Binding ExecutionCount, StringFormat='{}{0:N0}'}" FontWeight="Bold"/>
                                            </TextBlock>
                                        </Border>
                                        <Border Grid.Column="2" Background="#BBDEFB" Padding="6,3" CornerRadius="3" Margin="0,0,5,0">
                                            <TextBlock FontSize="10">
                                                <Run Text="📖 L.Reads: "/>
                                                <Run Text="{Binding AvgLogicalReads, StringFormat='{}{0:N0}'}" FontWeight="Bold"/>
                                            </TextBlock>
                                        </Border>
                                        <Border Grid.Column="3" Background="#FFF9C4" Padding="6,3" CornerRadius="3">
                                            <TextBlock FontSize="10">
                                                <Run Text="⏲️ Elapsed: "/>
                                                <Run Text="{Binding AvgElapsedTimeMs, StringFormat='{}{0:F2} ms'}" FontWeight="Bold"/>
                                            </TextBlock>
                                        </Border>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Loading Indicator -->
                <Border Grid.Row="1" Background="#80FFFFFF"
                       Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                       HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border Background="White" Padding="20">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⏳ Loading queries..." FontSize="16" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Border>
            </Grid>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center"
                         Visibility="{Binding IsDetailsPanelVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <!-- Details Panel -->
            <Border Grid.Column="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="2"
                   CornerRadius="10" Padding="20" Margin="10,0,0,0"
                   Visibility="{Binding IsDetailsPanelVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Details Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="📄 Query Details" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                        <Button Content="✖" Command="{Binding CloseDetailsPanelCommand}"
                               HorizontalAlignment="Right" Width="30" Height="30"
                               Background="#F44336" Foreground="White" FontWeight="Bold"
                               BorderThickness="0" Cursor="Hand"/>
                    </Grid>

                    <!-- Metrics Grid -->
                    <Grid Grid.Row="1" Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Executions:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedQuery.ExecutionCount, StringFormat='{}{0:N0}'}" Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Avg CPU Time:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedQuery.AvgCpuTimeMs, StringFormat='{}{0:F2} ms'}" Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Total CPU Time:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedQuery.TotalCpuTimeMs, StringFormat='{}{0:N2} ms'}" Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Avg Elapsed:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedQuery.AvgElapsedTimeMs, StringFormat='{}{0:F2} ms'}" Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Logical Reads:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedQuery.AvgLogicalReads, StringFormat='{}{0:N0}'}" Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Physical Reads:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding SelectedQuery.AvgPhysicalReads, StringFormat='{}{0:N0}'}" Margin="0,0,0,5"/>
                    </Grid>

                    <!-- Query Text -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Query Text:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <Border Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="1"
                                   CornerRadius="5" Padding="10">
                                <TextBlock Text="{Binding SelectedQuery.QueryText}" TextWrapping="Wrap"
                                          FontFamily="Consolas" FontSize="11"/>
                            </Border>

                            <!-- AI Analysis Results -->
                            <Border Visibility="{Binding HasAiAnalysis, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   Background="#F3E5F5" BorderBrush="#9C27B0" BorderThickness="2" CornerRadius="8" Padding="15" Margin="0,15,0,15">
                                <StackPanel>
                                    <TextBlock Text="🤖 AI-Powered Analysis" FontWeight="Bold" FontSize="14" Foreground="#6A1B9A" Margin="0,0,0,10"/>

                                    <!-- Performance Score -->
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Performance Score:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        <ProgressBar Grid.Column="1" Value="{Binding AiAnalysisResult.PerformanceScore}" Maximum="100" Height="20" Margin="10,0"/>
                                        <TextBlock Grid.Column="2" Text="{Binding AiAnalysisResult.PerformanceScore, StringFormat='{}{0}/100'}" FontWeight="Bold" Foreground="#6A1B9A"/>
                                    </Grid>

                                    <!-- AI Explanation -->
                                    <Border Background="White" BorderBrush="#CE93D8" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="💬 AI Explanation:" FontWeight="SemiBold" FontSize="11" Margin="0,0,0,5"/>
                                            <TextBlock Text="{Binding AiAnalysisResult.Explanation}" TextWrapping="Wrap" FontSize="11"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Estimated Improvement -->
                                    <TextBlock Margin="0,0,0,5">
                                        <Run Text="📈 Estimated Improvement: " FontWeight="SemiBold"/>
                                        <Run Text="{Binding AiAnalysisResult.EstimatedImprovement, StringFormat='{}{0:F0}%'}" FontWeight="Bold" Foreground="#4CAF50"/>
                                    </TextBlock>

                                    <!-- Optimized Query (if available) -->
                                    <Border Visibility="{Binding AiAnalysisResult.OptimizedQuery, Converter={StaticResource NullToVisibilityConverter}}"
                                           Background="#E8F5E9" BorderBrush="#4CAF50" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,10,0,0">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,5">
                                                <TextBlock Text="✨ Optimized Query:" FontWeight="SemiBold" FontSize="11"/>
                                                <Button Content="📋 Copy" Command="{Binding CopySqlCodeCommand}"
                                                       CommandParameter="{Binding AiAnalysisResult.OptimizedQuery}"
                                                       HorizontalAlignment="Right" Background="#4CAF50" Foreground="White"
                                                       FontSize="9" Padding="8,3" BorderThickness="0" Cursor="Hand"/>
                                            </Grid>
                                            <TextBlock Text="{Binding AiAnalysisResult.OptimizedQuery}" TextWrapping="Wrap" FontFamily="Consolas" FontSize="10"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!-- Optimization Suggestions -->
                            <TextBlock Text="🎯 Optimization Suggestions:" FontWeight="Bold" FontSize="14" Margin="0,20,0,10"/>
                            <ItemsControl ItemsSource="{Binding OptimizationSuggestions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderThickness="2" CornerRadius="8" Padding="12" Margin="0,0,0,10">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Severity}" Value="Critical">
                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                            <Setter Property="BorderBrush" Value="#F44336"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Severity}" Value="Warning">
                                                            <Setter Property="Background" Value="#FFF3E0"/>
                                                            <Setter Property="BorderBrush" Value="#FF9800"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Severity}" Value="Info">
                                                            <Setter Property="Background" Value="#E3F2FD"/>
                                                            <Setter Property="BorderBrush" Value="#2196F3"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <StackPanel>
                                                <!-- Header with severity badge and estimated impact -->
                                                <Grid Margin="0,0,0,8">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Border CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Severity}" Value="Critical">
                                                                            <Setter Property="Background" Value="#D32F2F"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Severity}" Value="Warning">
                                                                            <Setter Property="Background" Value="#F57C00"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Severity}" Value="Info">
                                                                            <Setter Property="Background" Value="#1976D2"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <TextBlock Text="{Binding Severity}" Foreground="White" FontSize="10" FontWeight="Bold"/>
                                                        </Border>
                                                        <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="12" VerticalAlignment="Center"/>
                                                    </StackPanel>

                                                    <Border HorizontalAlignment="Right" Background="#4CAF50" CornerRadius="3" Padding="6,2">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="Impact: " Foreground="White" FontSize="10"/>
                                                            <TextBlock Text="{Binding EstimatedImpact, StringFormat='{}{0:F0}%'}" Foreground="White" FontSize="10" FontWeight="Bold"/>
                                                        </StackPanel>
                                                    </Border>
                                                </Grid>

                                                <!-- Category Badge -->
                                                <Border Background="#E0E0E0" CornerRadius="3" Padding="6,2" Width="Auto" HorizontalAlignment="Left" Margin="0,0,0,8">
                                                    <TextBlock Text="{Binding Category}" FontSize="10" Foreground="#424242"/>
                                                </Border>

                                                <!-- Description -->
                                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" FontSize="11" Margin="0,0,0,8"/>

                                                <!-- Recommended Action -->
                                                <Border Background="#FFFDE7" BorderBrush="#FBC02D" BorderThickness="1" CornerRadius="5" Padding="8" Margin="0,0,0,8">
                                                    <StackPanel>
                                                        <TextBlock Text="💡 Recommended Action:" FontWeight="SemiBold" FontSize="10" Margin="0,0,0,4"/>
                                                        <TextBlock Text="{Binding RecommendedAction}" TextWrapping="Wrap" FontSize="10"/>
                                                    </StackPanel>
                                                </Border>

                                                <!-- SQL Code (if available) -->
                                                <Border Visibility="{Binding SqlCode, Converter={StaticResource NullToVisibilityConverter}}"
                                                       Background="#F5F5F5" BorderBrush="#BDBDBD" BorderThickness="1" CornerRadius="5" Padding="8">
                                                    <StackPanel>
                                                        <Grid Margin="0,0,0,5">
                                                            <TextBlock Text="📝 SQL Code:" FontWeight="SemiBold" FontSize="10"/>
                                                            <Button Content="📋 Copy" Command="{Binding DataContext.CopySqlCodeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                   CommandParameter="{Binding SqlCode}"
                                                                   HorizontalAlignment="Right" Background="#2196F3" Foreground="White"
                                                                   FontSize="9" Padding="8,3" BorderThickness="0" Cursor="Hand"/>
                                                        </Grid>
                                                        <TextBlock Text="{Binding SqlCode}" TextWrapping="Wrap" FontFamily="Consolas" FontSize="10"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="3" Margin="0,15,0,0">
                        <!-- Row 1: Primary Actions -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button Content="📋 Copy Query" Command="{Binding CopyQueryCommand}"
                                   Background="#2196F3" Foreground="White" FontWeight="Bold"
                                   Height="35" Padding="15,0" BorderThickness="0" Cursor="Hand"/>

                            <Button Content="🔧 Auto-Fix Query" Command="{Binding AutoFixQueryCommand}"
                                   Background="#FF6F00" Foreground="White" FontWeight="Bold"
                                   Height="35" Padding="15,0" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"
                                   ToolTip="Automatically fix common performance issues"
                                   IsEnabled="{Binding IsAiEnabled}"/>

                            <Button Content="🤖 AI Explain" Command="{Binding ShowAiExplainerCommand}"
                                   Background="#7B1FA2" Foreground="White" FontWeight="Bold"
                                   Height="35" Padding="15,0" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"
                                   ToolTip="Get AI-powered explanation of query performance issues"/>

                            <Button Content="📊 Predict Performance" Command="{Binding PredictPerformanceCommand}"
                                   Background="#1976D2" Foreground="White" FontWeight="Bold"
                                   Height="35" Padding="15,0" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"
                                   ToolTip="Predict performance impact of optimizations"/>
                        </StackPanel>

                        <!-- Row 2: Advanced Features -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button Content="✍️ Rewrite Query" Command="{Binding RewriteQueryCommand}"
                                   Background="#9C27B0" Foreground="White" FontWeight="Bold"
                                   Height="35" Padding="15,0" BorderThickness="0" Cursor="Hand"
                                   ToolTip="Intelligent Query Rewriter - AI-powered query optimization with multiple rewrite options"
                                   IsEnabled="{Binding IsAiEnabled}"/>

                            <Button Content="💰 Calculate Cost" Command="{Binding CalculateQueryCostCommand}"
                                   Background="#4CAF50" Foreground="White" FontWeight="Bold"
                                   Height="35" Padding="15,0" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"
                                   ToolTip="Calculate monetary cost of query (€/$/£)"/>

                            <Button Content="🔮 Forecast Performance" Command="{Binding ForecastPerformanceCommand}"
                                   Background="#2196F3" Foreground="White" FontWeight="Bold"
                                   Height="35" Padding="15,0" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"
                                   ToolTip="Forecast future performance trends (30-day prediction)"/>

                            <Button Content="🩹 Heal Query" Command="{Binding HealQueryCommand}"
                                   Background="#FF9800" Foreground="White" FontWeight="Bold"
                                   Height="35" Padding="15,0" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"
                                   ToolTip="Automatically heal query performance issues"/>
                        </StackPanel>

                        <!-- Row 3: Query Intelligence -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button Content="🔗 Analyze Correlations" Command="{Binding AnalyzeQueryCorrelationsCommand}"
                                   Background="#673AB7" Foreground="White" FontWeight="Bold"
                                   Height="35" Padding="15,0" BorderThickness="0" Cursor="Hand"
                                   ToolTip="Discover hidden relationships between queries"/>

                            <Button Content="📊 Cluster Queries" Command="{Binding ClusterQueriesCommand}"
                                   Background="#00BCD4" Foreground="White" FontWeight="Bold"
                                   Height="35" Padding="15,0" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"
                                   ToolTip="Group similar queries for bulk optimization"/>

                            <Button Content="🔍 Find Duplicates" Command="{Binding FindDuplicatesCommand}"
                                   Background="#009688" Foreground="White" FontWeight="Bold"
                                   Height="35" Padding="15,0" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"
                                   ToolTip="Detect duplicate or near-duplicate queries"/>
                        </StackPanel>

                        <!-- Row 4: Documentation -->
                        <StackPanel Orientation="Horizontal">
