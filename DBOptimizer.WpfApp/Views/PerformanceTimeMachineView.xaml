<UserControl x:Class="DBOptimizer.WpfApp.Views.PerformanceTimeMachineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Background="#F5F5F5">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <TextBlock Text="⏰ Performance Time Machine - Snapshot &amp; Replay"
                          FontSize="28" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20"/>

                <TextBlock Text="Performance time-travel - Every problem is recorded and analyzable"
                          FontSize="14" Foreground="#7F8C8D" Margin="0,0,0,30"/>

                <!-- Capture Section -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20"
                       BorderBrush="#E0E0E0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="📸 Capture New Snapshot" FontSize="18" FontWeight="SemiBold"
                                  Foreground="#34495E" Margin="0,0,0,15"/>

                        <TextBlock Text="Description (optional):" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding SnapshotDescription, UpdateSourceTrigger=PropertyChanged}"
                                Padding="8" FontSize="14" Margin="0,0,0,15"/>

                        <Button Content="📸 Capture Performance Snapshot"
                               Command="{Binding CaptureSnapshotCommand}"
                               IsEnabled="{Binding IsCapturing, Converter={StaticResource InverseBoolConverter}}"
                               Background="#16A085" Foreground="White"
                               FontSize="16" FontWeight="Bold" Padding="15"
                               BorderThickness="0" Cursor="Hand" Height="50"/>
                    </StackPanel>
                </Border>

                <!-- Status -->
                <Border Background="#3498DB" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                    <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontSize="14" TextWrapping="Wrap"/>
                </Border>

                <!-- Snapshot History -->
                <Border Background="White" CornerRadius="8" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="🕰️ Snapshot History (Last 7 Days)" FontSize="18" FontWeight="SemiBold"
                                  Foreground="#34495E" Margin="0,0,0,15"/>

                        <DataGrid ItemsSource="{Binding Snapshots}"
                                 SelectedItem="{Binding SelectedSnapshot}"
                                 AutoGenerateColumns="False"
                                 IsReadOnly="True"
                                 HeadersVisibility="Column"
                                 GridLinesVisibility="Horizontal"
                                 MaxHeight="200"
                                 Margin="0,0,0,15">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Width="150"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                <DataGridTextColumn Header="Queries" Binding="{Binding TopQueries.Count}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Button Content="🔍 Analyze Selected Snapshot"
                               Command="{Binding AnalyzeSnapshotCommand}"
                               IsEnabled="{Binding SelectedSnapshot, Converter={StaticResource NullToBoolConverter}}"
                               Background="#9B59B6" Foreground="White"
                               FontSize="14" FontWeight="Bold" Padding="12"
                               BorderThickness="0" Cursor="Hand" Height="45"/>
                    </StackPanel>
                </Border>

                <!-- Analysis Results -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,20,0,0"
                       BorderBrush="#E0E0E0" BorderThickness="1"
                       Visibility="{Binding CurrentAnalysis, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="🔬 Root-Cause Analysis" FontSize="20" FontWeight="SemiBold"
                                  Foreground="#9B59B6" Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Confidence: " FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding CurrentAnalysis.ConfidenceScore, StringFormat='{}{0:P0}'}" 
                                      FontWeight="Bold" Foreground="#27AE60" FontSize="16"/>
                        </StackPanel>

                        <TextBlock Text="🔴 Root Causes:" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding CurrentAnalysis.RootCauses}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="#E74C3C" Margin="0,0,0,8" 
                                              TextWrapping="Wrap" FontSize="14"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="💡 What Would Have Helped:" FontWeight="SemiBold" FontSize="16" Margin="0,15,0,10"/>
                        <ItemsControl ItemsSource="{Binding CurrentAnalysis.WhatWouldHaveHelped}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#E8F5E9" Margin="0,0,0,8" Padding="10" CornerRadius="5">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Key}" FontWeight="SemiBold" Foreground="#27AE60"/>
                                            <TextBlock Text="{Binding Value}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="🛡️ Prevention Strategies:" FontWeight="SemiBold" FontSize="16" Margin="0,15,0,10"/>
                        <ItemsControl ItemsSource="{Binding CurrentAnalysis.PreventionStrategies}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Margin="0,0,0,5" TextWrapping="Wrap" Foreground="#3498DB"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

